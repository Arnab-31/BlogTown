<%- include ('partials/header') %>  


<div class="nav-wrapper search-bar">
  <form action="/search" method="POST">
    <div class="input-field">
      <input id="search" type="search" name="q" placeholder="Type Your Search Word" value="<%= pre_value %>" required>
      <button><label class="label-icon" for="search"><i class="material-icons">search</i></label></button>
      <i class="material-icons">close</i>
    </div>
  </form>
</div>


 <% if(foundBlogs)
 {
   if(foundBlogs.length)
   {
    foundBlogs.forEach(function(blog)
      {%>
        <div class="row">
          <div class="col s12 m3">
          </div>
          <div class="col s12 m6">
            <div class="card"><a href="/blogs/<%= blog._id %>">
              <div class="card-image">
                <img src="<%= blog.image %>">
                <span class="card-title"></span>
              </div>
              <div class="card-content">
                <p><%=  blog.title %></p>
              </div>
              <div class="card-action">
                <a href="/profile/<%= blog.author.id %>" id="author"><span class="author-tag">Author:     </span><%= blog.author.username %></a>
              </div>
            </div></a>
          </div>
          <div class="col s12 m3">
          </div>
        </div>
      <%})
    }
    else
    {%>
      <div class="no-blogs">
        <h1>No Blogs Found</h1>
      </div>
    <%}
  }%>
<%- include ('partials/footer') %> 