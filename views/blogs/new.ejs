<%- include ('../partials/header') %>

<div class="container">
    <div class="auth-form">
        <form action="/blogs" method="POST">
            <h1>Write a blog</h1>
            <div class="field">
                <label for="blog[title]">Title</label>
                <input type="text" name="blog[title]" placeholder="title" required>
            </div>
            <div class="field"> 
                <label for="blog[image]">Image</label>
                <input type="text" name="blog[image]" placeholder="image url" required> 
            </div>
            <div class="field"> 
                <textarea name="blog[text]" id="" cols="30" rows="1000" required></textarea>
            </div>
            <div class="submit"> 
                <button><a class="waves-effect waves-light btn-large black">Submit!</a></button>
            </div>
        </form>
    </div>
</div>


